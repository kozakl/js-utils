{
  "name": "utils-js",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "test": "jest --coverage",
    "test:watch": "yarn test -- --watchAll"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "babel-preset-es2015": "^6.24.1",
    "fs-extra": "^4.0.1",
    "jest": "^20.0.4",
    "rest-optimize-webpack-plugin": "^1.0.1",
    "ts-jest": "^22.4.2",
    "ts-loader": "^3.1.1",
    "typescript": "^2.6.1",
    "webpack": "^2.6.1",
    "webpack-core": "^0.6.9"
  }
}
