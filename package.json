{
  "name": "@kozakluke/utils",
  "version": "2.1.0",
  "author": {
    "name": "Luke Kozak",
    "email": "kozakluke@gmail.com",
    "url": "https://github.com/kozakluke"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kozakluke/utils-js"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "publish-dist": "yarn build && cp package.json ./dist && npm publish ./dist --access=public",
    "test": "jest --coverage",
    "test:watch": "yarn test -- --watchAll"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "babel-preset-es2015": "^6.24.1",
    "fs-extra": "^4.0.1",
    "jest": "^20.0.4",
    "rest-optimize-webpack-plugin": "^1.0.1",
    "ts-jest": "^22.4.2",
    "ts-loader": "^3.1.1",
    "typescript": "^2.9.2",
    "webpack": "^2.6.1",
    "webpack-core": "^0.6.9"
  }
}
